<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".intro.fragment.FragmentVarietyFood">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/variety_food"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/ic_lunch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Variety of food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Set your location to start exploring" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="restaurant's around you" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#EEEDED"
            android:gravity="center"
            android:text="getstart it"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/page1"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:layout_marginLeft="166dp"
            android:src="@drawable/ic_circle_white"/>
        <ImageView
            android:id="@+id/page2"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_circle_white"/>
        <ImageView
            android:id="@+id/page3"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_circle_white"/>
        <ImageView
            android:id="@+id/page4"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_circle"/>


    </LinearLayout>


</FrameLayout>